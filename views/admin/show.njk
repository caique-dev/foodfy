{% extends 'layout.njk' %}

{% block content %}
    <div class="show">
        <section class="food">
            <header class="header_botoes">
                <h2>Receita: {{ recipe.title }} </h2>
                <div class="botoes">
                    <a class="botao" href="/admin/{{ recipe.id }}/edit">Editar receita</a>
                </div>
            </header>

            <img class="img-rad" src="{{ recipe.photo }}" alt="{{ recipe.title }}">
            <h2>{{ recipe.title }}</h2>
            <p>{{ recipe.author }}</p>
        </section>

        <section class="info">
            <div>
                <h3>Ingredientes</h3>
                {% for ingredients in recipe.ingredients %}
                    {% if ingredients != "" %}
                        <li>{{ingredients}} </li>
                    {% endif %}
                {% endfor %}
            </div>

            <div>
                <h3>Modo de preparo</h3>
                {% for step in recipe.preparation %}
                    {% if step != "" %}
                        <li>{{step}} </li>
                    {% endif %}
                {% endfor %}
            </div>

            {% if recipe.aditional_information != '' %}
                <div>
                    <h3>Informações adicionais</h3>
                    <p>{{ recipes.aditional_information }}</p>
                </div>
            {% endif %}
        </section>
    </div>
{% endblock content %}