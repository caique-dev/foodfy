{% extends 'layout.njk' %}

{% block content %}
    <div class="show">
        <section class="food">
            <header>
                <h2>Recita: {{ recipe.title }} </h2>
                <a href="/admin/{{ recipe.ID }}/edit">Editar receita</a>
            </header>

            <img class="img-rad" src="{{ recipe.image }}" alt="{{ recipe.title }}">
            <h2>{{ recipe.title }}</h2>
            <p>{{ recipe.author }}</p>
        </section>

        <section class="info">
            <div>
                <h3>Ingredientes</h3>
                {% for ingredientes in recipe.ingredients %}
                    <li>{{ ingredientes }}</li>
                {% endfor %}
            </div>

            <div>
                <h3>Modo de preparo</h3>
                {% for passo in recipe.preparation %}
                    <li>{{ passo }}</li>
                {% endfor %}
            </div>

            {% if recipe.information != 0 %}
                <div>
                    <h3>Informações adicionais</h3>
                    <p>{{ recipe.information }}</p>
                </div>
            {% endif %}
        </section>
    </div>
{% endblock content %}